{
  "name": "@tomjs/electron-devtools-installer",
  "version": "1.0.0",
  "description": "Install Chrome extension for Electron, Support cjs/esm",
  "keywords": [
    "electron",
    "devtools",
    "installer",
    "chrome",
    "extension"
  ],
  "author": {
    "name": "Tom Gao",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomgao365/electron-devtools-installer.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "start": "tsx ./src/index.ts",
    "build": "tsup",
    "test": "jest",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint \"{src,test}/**/*.ts\" *.{js,cjs,ts} --fix --cache",
    "lint:prettier": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && np --any-branch --no-yarn --yolo --no-publish --message \"chore: release v%s\""
  },
  "dependencies": {
    "@tomjs/unzip-crx": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@jest/globals": "^29.7.0",
    "@kayahr/jest-electron-runner": "^29.10.0",
    "@tomjs/commitlint": "^2.0.5",
    "@tomjs/eslint": "^1.1.0",
    "@tomjs/prettier": "^1.0.6",
    "@tomjs/tsconfig": "^1.0.8",
    "@types/jest": "^29.5.10",
    "@types/node": "^18.19.1",
    "electron": "^27.1.3",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "np": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "tsx": "^4.6.1",
    "typescript": "~5.2.2"
  }
}
